{
  "name": "sdk-demo-dag",
  "operator": "kubernetes",
  "params": {},
  "tasks": [
    {
      "name": "extract-data",
      "depends_on": [],
      "container": {
        "image": "node:22-alpine",
        "command": [
          "sh",
          "-c",
          "npm install && node /repo/tasks/extract.js"
        ],
        "resources": {
          "cpu": {
            "min": "100m",
            "max": "500m"
          },
          "mem": {
            "min": "128Mi",
            "max": "256Mi"
          }
        }
      }
    },
    {
      "name": "transform-data",
      "depends_on": ["extract-data"],
      "container": {
        "image": "node:22-alpine",
        "command": [
          "sh",
          "-c",
          "npm install && node /repo/tasks/transform.js"
        ],
        "resources": {
          "cpu": {
            "min": "200m",
            "max": "1000m"
          },
          "mem": {
            "min": "256Mi",
            "max": "512Mi"
          }
        }
      }
    },
    {
      "name": "load-data",
      "depends_on": ["transform-data"],
      "container": {
        "image": "node:22-alpine",
        "command": [
          "sh",
          "-c",
          "npm install && node /repo/tasks/load.js"
        ],
        "resources": {
          "cpu": {
            "min": "100m",
            "max": "500m"
          },
          "mem": {
            "min": "128Mi",
            "max": "256Mi"
          }
        }
      }
    }
  ]
}
