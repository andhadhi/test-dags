{
  "name": "retry-timeout-test",
  "operator": "kubernetes",
  "params": {},
  "tasks": [
    {
      "name": "quick-task",
      "depends_on": [],
      "retries": 0,
      "timeout": "1m",
      "container": {
        "image": "node:18-alpine",
        "command": ["sh", "-c", "echo 'Quick task completed'"]
      }
    },
    {
      "name": "retry-task",
      "depends_on": ["quick-task"],
      "retries": 3,
      "timeout": "2m",
      "container": {
        "image": "node:18-alpine",
        "command": ["sh", "-c", "RAND=$((RANDOM % 10)); echo \"Random: $RAND\"; if [ $RAND -lt 7 ]; then exit 1; fi; echo 'Success!'"]
      }
    },
    {
      "name": "timeout-test",
      "depends_on": ["quick-task"],
      "retries": 1,
      "timeout": "30s",
      "container": {
        "image": "node:18-alpine",
        "command": ["sh", "-c", "echo 'Starting long task...'; sleep 10; echo 'Done'"]
      }
    }
  ]
}
